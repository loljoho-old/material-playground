{
  "dest":     "dist/",
  "root":     "src/",
  "fonts":    [
    "src/bower_components/font-awesome/fonts/**/*.*"
  ], 
  "html":     "src/**/*.html",
  "img":      "src/assets/images/*",
  "tpls":     "src/app/**/*.html",
  "styles": [
    "src/assets/styles/*.css"
  ],
  "scripts": [
    "src/app/**/*module*.js",
    "src/app/**/*.js"
  ],
  "vendorScripts": [
    "src/bower_components/**/*.min.js"
  ],
  "vendorStyles": [
    "src/bower_components/**/*.min.css"
  ]
}